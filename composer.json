{
    "name": "jascha030/twig-service",
    "description": "Simple twig service interface and class I like to wrap around the Environment object during development.",
    "authors": [
        {
            "name": "Jascha030",
            "email": "contact@jaschavanaalst.nl"
        }
    ],
    "license": "MIT",
    "keywords": [
        "Twig",
        "Templating",
        "Service",
        "DIC"
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8",
        "twig/twig": "^3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.6",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "Jascha030\\Twig\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jascha030\\Twig\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "format": "php-cs-fixer fix --config=.php-cs-fixer.dist.php",
        "phpunit": "phpunit --config phpunit.xml"
    }
}
